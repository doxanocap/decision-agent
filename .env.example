# General
PROJECT_NAME="Decisions Architect"
VERSION="0.1.0"

# Database (PostgreSQL)
# Local: postgresql://postgres:postgres@localhost:5432/decisions
# Docker: postgresql://postgres:postgres@postgresql:5432/decisions
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/decisions"

# Qdrant (Vector DB)
# Local: localhost
# Docker: qdrant
QDRANT_HOST="localhost"
QDRANT_PORT=6333
QDRANT_COLLECTION="decisions"

# Models
EMBEDDING_MODEL="BAAI/bge-m3"
RERANKER_MODEL="BAAI/bge-reranker-base"
CROSS_ENCODER_MODEL="./models/aqm/best_model_v2"

# LLM (OpenAI)
OPENAI_API_KEY=""
LLM_MODEL="gpt-4o-mini"

# Client
# Local: http://localhost:8000
# Docker: http://server:8000
API_URL="http://localhost:8000"
